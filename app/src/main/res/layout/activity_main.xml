<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainActivity"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/standard_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"
        style="@style/TitleText"/>

    <Button
        android:id="@+id/button_search"
        style="@style/StyleForButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/ic_search"
        />

    <Button
        android:id="@+id/button_media"
        style="@style/StyleForButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/standard_padding"
        android:layout_weight="1"
        android:text="@string/media"
        app:icon="@drawable/ic_media" />

    <Button
        android:id="@+id/button_settings"
        style="@style/StyleForButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings" />

</LinearLayout>