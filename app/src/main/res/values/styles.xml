<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleForButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_margin_to_text</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="StyleForReloadButton" parent="StyleForButton">
        <item name="backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Switch">
        <item name="android:checked">false</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/light_blue</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="RoundedFrameWithEditText">
        <item name="android:background">@drawable/rounded_8</item>
    </style>
    <style name="IconDarkGreyAndBlack">
        <item name="tint">@color/dark_grey</item>
        <item name="backgroundTint">@color/transparent_0</item>
    </style>
    <style name="GeneralText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="EditText" parent="GeneralText">
        <item name="android:background">@null</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>
    <style name="EditTextPlaylist" parent="EditText">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TitleText" parent="GeneralText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="SettingText" parent="GeneralText">
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>
    <style name="GreyText11" parent="GeneralText">
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="TextForError">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="GeneralText14" parent="GeneralText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TrackDescriptionText" parent="GeneralText">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="TrackDescriptionTextItems" parent="TrackDescriptionText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PlaylistText" parent="GeneralText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TextTitlePlaylist" parent="GeneralText">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="TextPlaylist" parent="GeneralText">
        <item name="android:textSize">18sp</item>
        <item name="maxWidth">200dp</item>
        <item name="android:drawableTint">@color/dark</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="PlaylistTextBS" parent="GeneralText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="BottomSheetTitle" parent="GeneralText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/dark</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="new_playlist_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@drawable/selector_edit_text</item>
    </style>

    <style name="new_playlist_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>