<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivity" parent="Theme.PlaylistMaker">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="StyleForButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_margin_to_text</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="Switch">
        <item name="android:checked">false</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/light_blue</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="RoundedFrameWithEditText">
        <item name="android:background">@drawable/rounded_8</item>
    </style>
    <style name="IconDarkGreyAndBlack">
        <item name="tint">@color/dark_grey</item>
    </style>


    <style name="GeneralText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="EditText" parent="GeneralText">
        <item name="android:background">@null</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>
    <style name="TitleText" parent="GeneralText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="SettingText" parent="GeneralText">
        <item name="android:gravity">center_vertical</item>
        <item name="tint">@color/dark_grey</item>
    </style>
</resources>