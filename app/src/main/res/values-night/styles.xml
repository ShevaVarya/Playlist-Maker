<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Icon">
        <item name="tint">@color/white</item>
    </style>

    <style name="IconDarkGreyAndBlack">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">@color/transparent_0</item>
    </style>

    <style name="Switch">
        <item name="android:checked">true</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/light_blue</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="StyleForReloadButton" parent="StyleForButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="GeneralText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText" parent="GeneralText">
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SettingText" parent="GeneralText">
        <item name="drawableTint">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditText" parent="GeneralText">
        <item name="android:background">@null</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="GreyText11" parent="GeneralText">
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="maxWidth">200dp</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="TextForError">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TrackDescriptionTextItems" parent="TrackDescriptionText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/dark_transparent_20</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@null</item>
    </style>
    <style name="BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@color/dark</item>
    </style>
</resources>